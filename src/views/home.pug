doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Video Chat
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Video Chat
        main
            div#welcome
                h4 열린 채팅방
                ul    
                form
                    input#name(placeholder="사용할 닉네임" required, type="text")
                    input#roomName(placeholder="채팅방 이름", required, type="text")
                    button 입장
                
            
            div#room
                h3 
                ul
                form#name
                    input(placeholder="사용할 닉네임", required, type="text")
                    button 닉네임 변경
                form#msg
                    input(placeholder="메세지 입력", required, type="text")
                    button 보내기
        
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 